<div class="row d-flex justify-content-center">
  <div class="col-12">
    <div class="card border-0" style="width: 650px;">
      <img class="card-img-top rounded" src="<%=@accommodation.image%>" alt="Card image">	  
    </div>
  </div>
</div>  
<div class="row">
  <div class="col-md-7 lg-7">
    <div class="card border-0">	  
      <div class="card-body">
        <p class="card-text fw-bold"><%= @accommodation.name%>, <%= @accommodation.city.name%></p>
        <p class="card-text fw-bold"><%= @accommodation.price%>€<span class="fw-normal">/nuit</span></p>
        <p class="card-text"><%= @accommodation.description%>
      </div>
    </div>
  </div>
  <div class="col-5">
    <div class="card rounded">
      <div class="card-body">
        <p class="card-text fw-bold">Ajouter des dates pour voir le prix</p>
          <form>
            <div class="row">
              <div class="col-6">
                <label>Date Arrivée</label>
                <input class="form-control">
              </div>
              <div class="col-6">
                <label>Date Départ</label>
                <input class="form-control">
              </div>
            </div>
            <button class="btn btn-danger mt-3">Vérifier Disponibilité</button>
          </form>  
      </div>
    </div> 
  </div>
</div>  
  
